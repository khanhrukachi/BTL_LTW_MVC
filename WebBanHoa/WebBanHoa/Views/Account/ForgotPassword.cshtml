@model WebBanHoa.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}
 
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h2 style="margin-top:200px">@ViewBag.Title.</h2>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label for="@Html.IdFor(m => m.Email)" class="col-md-12 control-label">Hãy nhập vào tên tài khoản đăng nhập của bạn và chúng tôi sẽ gửi một liên kết đến gmail liên kết với tài khoản của bạn đặt lại mật khẩu qua hộp thư đó.</label>
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Email Link" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
